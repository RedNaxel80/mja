{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "mja",
    "version": "0.5.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {"open": true},
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope":[{"name": "binaries/api", "sidecar": true}]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.redxdd.mja",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["binaries/api"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "local",
        "fullscreen": false,
        "resizable": true,
        "title": "MJ Auto",
        "width": 600,
        "height": 600,
        "url": "src/index.html"
      },
      {
        "label": "external",
        "title": "Settings",
        "url": "src/settings.html"
      }
    ]
  }
}
