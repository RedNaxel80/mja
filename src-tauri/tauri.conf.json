{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "mja",
    "version": "0.6.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {"open": true, "message":  true, "ask":  true, "confirm": true},
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope":[{"name": "binaries/api", "sidecar": true}]
      },
      "process": { "exit":  true, "relaunch":  true}
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.redxdd.mja",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["binaries/api"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "MJ Auto",
        "width": 820,
        "height": 520,
        "url": "src/index.html",
        "visible": true,
        "hiddenTitle": false
      }
    ],
    "systemTray": {
        "iconPath": "icons/128x128.png",
        "menuOnLeftClick": true
      }

  }
}
